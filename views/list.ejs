
<%- include("header") %>
    <div class="box" id="heading">
        <h1>Today is a <%= listTitle %> !</h1>
    </div>
    <div class="box" >
        <% for(let Item of ListItems) {%>
            <div class="item">
                <input type="checkbox">
                <p><%= Item  %></p>  
            </div>
        <% } %> 
    
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="listVal" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include("footer") %> 
